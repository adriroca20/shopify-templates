{% comment %}
  Sección para mostrar el botón personalizado 3ah
{% endcomment %}

<div class="button-3ah-section{% if section.settings.full_width %} page-width{% endif %}">
  <div class="button-3ah-container" style="{% if section.settings.alignment == 'center' %}justify-content: center;{% elsif section.settings.alignment == 'right' %}justify-content: flex-end;{% else %}justify-content: flex-start;{% endif %}">
    {%- render 'button-3ah',
      text: section.settings.button_text,
      url: section.settings.button_link,
      class: section.settings.custom_class
    -%}
  </div>
</div>

<style>
  .button-3ah-section {
    padding: {{ section.settings.padding_top | times: 0.5 }}px 0 {{ section.settings.padding_bottom | times: 0.5 }}px 0;
  }

  .button-3ah-container {
    display: flex;
    width: 100%;
    flex-direction: row;
  }

  .button-3ah {
    display: inline-block;
    background-color: white;
    color: #000;
    font-weight: 500;
    padding: 12px 30px;
    text-align: center;
    text-decoration: none;
    border: 1px solid #e7e7e7;
    border-radius: 4px;
    font-size: 14px;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: transform 0.4s ease-out, box-shadow 0.2s ease-out;
  }

  .button-3ah:hover {
    transform: scale(0.98);
    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  }
  
  .button-3ah:active {
    transform: scale(0.92);
  }

  @media screen and (min-width: 750px) {
    .button-3ah-section {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    }
  }
</style>

{% schema %}
{
  "name": "Botón 3ah",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "PARA ELLA"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Clase personalizada"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alineación",
      "options": [
        {
          "value": "left",
          "label": "Izquierda"
        },
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "right",
          "label": "Derecha"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Ancho completo",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Relleno superior",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Relleno inferior",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Botón 3ah",
      "category": "Botones"
    }
  ]
}
{% endschema %} 